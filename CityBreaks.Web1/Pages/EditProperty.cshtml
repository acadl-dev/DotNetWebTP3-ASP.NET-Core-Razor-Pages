@page "/editproperty/{id:int}"
@model CityBreaks.Web1.Pages.EditPropertyModel
@{
    ViewData["Title"] = "Editar Propriedade";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Campo oculto para o ID -->
                        <input type="hidden" asp-for="Property.Id" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Property.Name" class="form-label">Nome da Propriedade</label>
                                    <input asp-for="Property.Name" class="form-control" placeholder="Digite o nome da propriedade" />
                                    <span asp-validation-for="Property.Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Property.PricePerNight" class="form-label">Preço por Noite</label>
                                    <div class="input-group">
                                        <span class="input-group-text">R$</span>
                                        <input asp-for="Property.PricePerNight" class="form-control" placeholder="0,00" step="0.01" />
                                    </div>
                                    <span asp-validation-for="Property.PricePerNight" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label">País</label>
                                    <select id="countrySelect" class="form-select" asp-for="SelectedCountryId" asp-items="Model.Countries">
                                        <option value="">Selecione um país</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Property.CityId" class="form-label">Cidade</label>
                                    <select asp-for="Property.CityId" asp-items="Model.Cities" class="form-select" id="citySelect">
                                        <option value="">Selecione uma cidade</option>
                                    </select>
                                    <span asp-validation-for="Property.CityId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="./Index" class="btn btn-secondary me-md-2">Cancelar</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Salvar Alterações
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById("countrySelect").addEventListener("change", function () {
            var countryId = this.value;
            var citySelect = document.getElementById("citySelect");

            // Limpa as opções atuais
            citySelect.innerHTML = '<option value="">Selecione uma cidade</option>';

            if (countryId) {
                fetch(`?handler=CitiesByCountry&countryId=${countryId}`)
                    .then(response => response.json())
                    .then(data => {
                        data.forEach(city => {
                            var option = document.createElement("option");
                            option.value = city.id;
                            option.text = city.name;
                            citySelect.appendChild(option);
                        });
                    })
                    .catch(err => console.error(err));
            }
        });
    </script>
}
