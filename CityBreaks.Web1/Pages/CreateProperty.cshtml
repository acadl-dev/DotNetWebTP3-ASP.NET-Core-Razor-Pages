@page "/index2"
@model CityBreaks.Web1.Pages.CreatePropertyModel
@{
    ViewData["Title"] = "Cadastrar Nova Propriedade";
}

<h2>Cadastrar Nova Propriedade</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Property.Name" class="control-label">Nome</label>
        <input asp-for="Property.Name" class="form-control" />
        <span asp-validation-for="Property.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Property.CityId" class="control-label">Cidade</label>
        <select asp-for="Property.CityId" asp-items="Model.CityList" class="form-control">
            <option value="">-- Selecione uma cidade --</option>
        </select>
        <span asp-validation-for="Property.CityId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Property.PricePerNight" class="control-label">Preço por Noite</label>
        <input asp-for="Property.PricePerNight" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Property.PricePerNight" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-page="/Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}